@model IEnumerable<MvcCoreApiCrudDepartamentos2023.Models.Departamento>

@{
    ViewData["Title"] = "BuscarLocalidades";
}

<h1>Buscar Localidades</h1>

<form method="post">
    <label>Introduzca Localidad</label>
    <input type="text" name="localidad" class="form-control" required/>
    <button class="btn btn-info">
        Buscar
    </button>
</form>

@if (Model != null)
{
   <table class="table table-info">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdDepartamento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Localidad)
                </th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdDepartamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Localidad)
                </td>
            </tr>
    }
        </tbody>
    </table> 
}


